<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.EntrantListFragment"
    android:orientation="vertical">

    <Button
        android:id="@+id/filter_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/entrant_listview"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        android:background="@color/transparent"
        android:drawableTop="@drawable/filter_list_icon"/>

    <ListView
        android:id="@+id/entrant_listview"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/filter_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/entrant_list_content"/>
    <Button
        android:id="@+id/send_notification_button"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/entrant_listview"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/button_border"
        android:textColor="@color/black"
        android:text="@string/send_notification"/>

    <Button
        android:id="@+id/remove_entrant_button"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/send_notification_button"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/button_border"
        android:textColor="@color/black"
        android:text="@string/remove_entrant"/>

    <Button
        android:id="@+id/sample_attendees_button"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/remove_entrant_button"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/button_border"
        android:textColor="@color/black"
        android:text="@string/sample_attendees"/>

</androidx.constraintlayout.widget.ConstraintLayout>