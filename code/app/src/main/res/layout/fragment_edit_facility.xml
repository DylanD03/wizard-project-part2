<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="Fragments.EditFacilityFragment"
    android:orientation="vertical">

    <!-- Facility Image Container-->
    <FrameLayout
        android:id="@+id/frame_facility_picture_container"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1">

        <!-- Facility Image -->
        <ImageView
            android:id="@+id/imageview_edit_facility_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/example_facility"/>

        <!-- Edit Icon -->
        <ImageView
            android:id="@+id/imageview_edit_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="4dp"
            android:background="@drawable/circle_background"
            android:contentDescription="@string/edit_picture_icon_desc"
            android:padding="4dp"
            android:src="@drawable/camera_icon"
            app:tint="@color/white" />
    </FrameLayout>

    <!-- Edit Facility Name Field -->
    <EditText
        android:id="@+id/edittext_facility_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/edit_facility_name"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frame_facility_picture_container"
        app:layout_constraintVertical_bias="0.1" />

    <!-- Edit Facility Name Field -->
    <EditText
        android:id="@+id/edittext_facility_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/edit_facility_location"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edittext_facility_name"
        app:layout_constraintVertical_bias="0.1" />

    <!-- Save Button -->
    <Button
        android:id="@+id/button_save_facility"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lighter_purple"
        android:text="@string/save_button"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edittext_facility_location" />

    <!-- Delete Facility Image Button -->
    <Button
        android:id="@+id/button_delete_facility_image"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:backgroundTint="@color/lighter_purple"
        android:text="@string/delete_facility_image"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edittext_facility_location" />

</androidx.constraintlayout.widget.ConstraintLayout>