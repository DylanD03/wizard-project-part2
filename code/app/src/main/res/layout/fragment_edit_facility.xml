<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="Fragments.EditFacilityFragment"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/facility_edit_imageview"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/example_facility"/>

    <Button
        android:id="@+id/facility_edit_image_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/facility_edit_imageview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawableLeft="@drawable/folder_icon"
        android:background="@color/transparent"
        android:textColor="@color/lighter_gray"
        android:text="@string/upload_image_text"
        android:layout_marginHorizontal="120dp"/>

    <TextView
        android:id="@+id/facility_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/facility_edit_image_button"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/facility_name_label"
        android:textSize="16sp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="80dp" />

    <EditText
        android:id="@+id/facility_edit_name"
        android:layout_width="250dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/facility_name_label"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Example Rec Centre"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="80dp"
        android:background="@drawable/edittext_border"/>

    <TextView
        android:id="@+id/facility_location_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/facility_edit_name"
        android:text="@string/location_label"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="80dp" />

    <EditText
        android:id="@+id/facility_edit_location"
        android:layout_width="250dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/facility_location_label"
        android:hint="Edmonton, AB"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="80dp"
        android:background="@drawable/edittext_border"/>

    <Button
        android:id="@+id/facility_done_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="100dp"
        android:layout_marginHorizontal="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/button_border"
        android:textColor="@color/black"
        android:text="@string/doneButton"/>



</androidx.constraintlayout.widget.ConstraintLayout>